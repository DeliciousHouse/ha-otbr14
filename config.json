{
  "version": "latest",
  "slug": "otbr14",
  "name": "OpenThread BR (Thread 1.4)",
  "description": "OpenThread Border Router add-on using the upstream 1.4 image",
  "url": "https://github.com/DeliciousHouse/ha-otbr14",

  "image": "docker.io/openthread/border-router",

  "arch": ["aarch64", "amd64"],
  "init": false,
  "host_network": false,

  "privileged": ["IPC_LOCK", "NET_ADMIN"],
  "devices": [
    "/dev/net/tun",
    "/dev/serial/by-id/usb-Nordic_Semiconductor_nRF528xx_OpenThread_Device_DF37F36B72A5-if00"
  ],

  "environment": {
    "RADIO_URL": "spinel+hdlc+uart:///dev/serial/by-id/usb-Nordic_Semiconductor_nRF528xx_OpenThread_Device_DF37F36B72A5-if00?uart-baudrate=115200&uart-flow-control=none",
    "TREL_URL": "trel://enp6s18",
    "OTBR_WEB_PORT": "8080"
  },

  "options": {
    "device": "/dev/serial/by-id/usb-Nordic_Semiconductor_nRF528xx_OpenThread_Device_DF37F36B72A5-if00",
    "baudrate": "115200",
    "flow_control": false,
    "autoflash_firmware": true,
    "otbr_log_level": "notice",
    "firewall": false,
    "nat64": false
  },

  "ports": {
    "8080/tcp": 8079,
    "8081/tcp": 8081
  },
  "ports_description": {
    "8080/tcp": "OpenThread Web UI",
    "8081/tcp": "OpenThread REST API"
  },

  "schema": {
    "device": "device(subsystem=tty)",
    "baudrate": "list(57600|115200|230400|460800|921600)",
    "flow_control": "bool",
    "network_device": "str?",
    "autoflash_firmware": "bool",
    "otbr_log_level": "list(debug|info|notice|warning|error|critical|alert|emergency)",
    "firewall": "bool",
    "nat64": "bool"
  },
  "startup": "services"
}
